/* pages/mine/mine.wxss */

.page_mine {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
}

.page_hd {
  background:radial-gradient(circle,#ff9475,#ff7c65,#ff6537);
  box-shadow: 0px 2px 2px rgba(0,0,0,0.2);
}

.person_img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ff7d42;
}

.default_userimg {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #ff6a42;
  border-radius: 100rpx;
}

.per_name {
  margin-top: 20rpx;
  color: white;
  font-size: 35rpx;
}

.order_info {
  background: #ff6537;
  display: flex;
  padding: 20rpx 0;
}

.pre_pay {
  color: white;
  flex: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}

.split_line {
  width: 0.3%;
  background-color: white;
}

.refund_sale {
  color: white;
  flex: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}

.page_content {
  margin-top: 40rpx;
}

.item {
  background-color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #CCCCCC;
}

.order_img {
  width: 50rpx;
  height: 50rpx;
}

.myorder {
  font-size: 30rpx;
  margin-left: 30rpx;
}

.aaa{
  margin-top: 40rpx;
}

.page_bottom{
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hint{
color: #878787;
font-size: 30rpx;
}
.cancle{
background: #FF6537;
color: white;
width: 90%;
margin: 20rpx 30rpx;
}