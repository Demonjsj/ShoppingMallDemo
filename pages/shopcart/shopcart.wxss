/* pages/shopcart/shopcart.wxss */

.asdasd {
  padding-top: 20rpx;
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
}

.cart_item {
  padding: 10rpx;
  display: flex;
  align-content: center;
  border-bottom: 1rpx #ccc dotted;
  background-color: white;
}

.img_left {
  display: flex;
  height: 100%;
  justify-content: center;
  align-content: center;
}

.choice_img {
  width: 50rpx;
  height: 50rpx;
  margin-top: 75rpx;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.goods_img {
  display: flex;
  width: 300rpx;
  height: 200rpx;
  border: 1rpx solid #ccc;
  margin: 10rpx 20rpx;
}

.goods_info {
  width: 100%;
  overflow: hidden;
  height: 100%;
  justify-content: center;
  align-content: center;
}

.goods_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}

.goods_name {
  font-size: 35rpx;
}

.goods_price {
  color: red;
  font-size: 35rpx;
  justify-content: flex-end;
}

.goods_kind {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.re_up {
  display: flex;
}

.goods_mount {
  width: 100%;
  display: flex;
  margin-top: 40rpx;
  justify-content: space-between;
}

.reduce_sign {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid gray;
  border-right: 0rpx;
}

.amount {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid gray;
  border-right: 0rpx;
}

.up_sign {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid gray;
}

.img_delete {
  width: 50rpx;
  height: 50rpx;
}
